<%- include('./parts/head',{title:'Pizzaria Fantástica'}) %>

	<link rel="stylesheet" href="/css/index.css">
	<form action="/busca" method="GET">
		<input type="text" name="busca" placeholder="Qual pizza você procura?" autocomplete="off">
		<button type="submit">Buscar</button>
	</form>
	<main>
		<% for(let pizza of pizzas) { %>
		<article>
			<img src="<%= pizza.img %>" alt="<%= pizza.nome %>">
			<a href="/pizzas/<%= pizza.id %>">Ver Mais</a>
			<button>+ Add</button>
			<div><%= pizza.nome %></div>
			<span><%= pizza.preco.toLocaleString('pt-br',{style: 'currency', currency: 'BRL'}).replace('.',',') %></span>
		</article>
		<% } %>
	</main>

<%- include('./parts/foot') %> 